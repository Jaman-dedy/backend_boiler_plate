{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "outDir": "./build",
      "typeRoots": [
        "node_modules/@types",
        "src/types"
      ]
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules",
      "coverage",
      "docs"
    ]
  }